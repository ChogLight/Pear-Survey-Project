<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post">
              <div class="form-group">
                <label for="NameTextField">Title</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Survey Name" name="title" value="<%= surveys.Title %>" required>
              </div>
              <div class="form-group">
                <label for="AuthorTextField">Author</label>
                <input type="text" class="form-control" id="AuthorTextField"
                placeholder="Survey Author" name="author" value="<%= surveys.Author %>"  required>
              </div>
              <div class="form-group">
                <label for="question1TextField">Question1</label>
                <input type="text" class="form-control" id="question1TextField"
                placeholder="Survey Question 1" name="question1" value="<%= surveys.Question1 %>"  required>
              </div>
              <div class="form-group">
                <label for="question2TextField">Question2</label>
                <input type="text" class="form-control" id="question2TextField"
                placeholder="Survey Question 2" name="question2" value="<%= surveys.Question2 %>"  required>
              </div>
              <div class="form-group">
                <label for="question3TextField">Question3</label>
                <input type="text" class="form-control" id="question3TextField"
                placeholder="Survey Question 3" name="question3" value="<%= surveys.Question3 %>"  required>
              </div>
              <br>
              <button type="submit" class="btn btn-primary"><i class="fas fa-edit"></i> Submit</button>
              <a href="/surveys" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>