<% include ../partials/header.ejs %>

<!-- MAIN CONTENT -->
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1><%= title %></h1>
        <form class="form" method="post">
        <div class=" col-md-12">                         
          <table class="table table-bordered table-striped table-hover">
            <tr>
              <th class="text-left col-12">Survey Author: <%= surveys.Author %> </th> 
            </tr>
              <tr>
                <th class="text-left col-12">Survey Title: <%= surveys.Title %></th> 
              </tr>
              <tr>
                <th class="text-left col-12"> MC Questions: </th> 
              </tr>
                <% for(let count = 0; count < surveys.MCQuestions.length; count++) { %>
                  <tr><th class="text-left col-12" name="questionsMC"><%= surveys.MCQuestions[count].Title %></th></tr>
                  <tr><td class="text-left col-12"><input type="radio"  name="questionsMC" value="" > <%= surveys.MCQuestions[count].Option1 %></td></tr> 
                  <tr><td class="text-left col-12"><input type="text" class="form-control" name="questionsMC" value="<%= surveys.MCQuestions[count].Option1Total %>" hidden="hidden"></td></tr>
                  <tr><td class="text-left col-12"><input type="radio"  name="questionsMC" value="" required> <%= surveys.MCQuestions[count].Option2 %></td></tr>
                  <tr><td class="text-left col-12"><input type="text" class="form-control" name="questionsMC" value="<%= surveys.MCQuestions[count].Option2Total %>" hidden="hidden"></td></tr>
                  <tr><td class="text-left col-12"><input type="radio"  name="questionsMC" value="" required> <%= surveys.MCQuestions[count].Option3 %></td></tr>
                  <tr><td class="text-left col-12"><input type="text" class="form-control" name="questionsMC" value="<%= surveys.MCQuestions[count].Option3Total %>" hidden="hidden"></td></tr>
                  <tr><td class="text-left col-12"><input type="radio" name="questionsMC" value="" required> <%= surveys.MCQuestions[count].Option4 %></td></tr>
                  <tr><td class="text-left col-12"><input type="text" class="form-control" name="questionsMC" value="<%= surveys.MCQuestions[count].Option4Total%>" hidden="hidden"></td></tr>

                  <% } %>
                  <tr>
                    <th class="text-left col-12"> TF Questions: </th> 
                  </tr>
                  <% for(let count = 0; count < surveys.TFQuestions.length; count++) { %>
                    <tr><th class="text-left col-12" name="questionsTF"><%= surveys.TFQuestions[count].Title %></th></tr>
                  <tr><td class="text-left col-12"><input type="radio" name="questionsTF" value=""> <%= surveys.TFQuestions[count].Option1 %></td></tr>
                  <tr><td class="text-left col-12"><input type="text" class="form-control" name="questionsTF" value="<%= surveys.TFQuestions[count].Option1Total %>" hidden="hidden"></td></tr>
                <tr><td class="text-left col-12"><input type="radio" name="questionsTF" value=""> <%= surveys.TFQuestions[count].Option2 %></td></tr>
                <tr><td class="text-left col-12"><input type="text" class="form-control" name="questionsTF" value="<%= surveys.TFQuestions[count].Option2Total %>" hidden="hidden"></td></tr>
                    <% } %>
              </table>
          <br>
          <button type="submit" class="btn btn-primary"></i> Submit</button>
          <a href="/home" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
          <br>
          <br>
          <br>
          <br>
        </div>
      </form>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>
